<h1>Survey Info:<%=@survey.name()%></h1>
<form action='/survey/<%=@survey.id()%>' method='post'>
  <input name='_method' type='hidden' value='patch'>
  <label for='new_survey_name'>Change the survey name:</label>
  <input id='edit_survey' name='edit_survey' type='text'>
  <button type='submit' class='btn btn-warning'> Change Name </button>
</form>

<h3>Survey Questions:</h3>
<% if @questions.any?() %>
  <% @questions.each() do |question| %>
    <ul>
      <li><a href='/question/<%=question.id%>'><%= question.inquiry() %></a></li>
    </ul>
  <%end%>
<% else %>
  <p>You have no survey questions!</p>
<% end %>
<form action='/survey/<%=@survey.id()%>' method='post'>
  <label for='new_question'> Enter a new question: </label>
  <input id='new_question' name='new_question' type='text' </input>
  <button type='submit' class='btn btn-success'> Save Question</button>
</form>

<form action='/survey/<%=@survey.id()%>' method='post'>
  <input name="_method" type="hidden" value='delete'>
  <button type='submit' class='btn btn-info'>Delete Survey</button>
</form>

<a href='/'> Go Home </a>
